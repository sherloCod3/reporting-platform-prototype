# QREPORTS - Environment Variables Template
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DATABASE (MySQL)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Root password do MySQL
# USE SENHA FORTE: mínimo 16 caracteres, com símbolos
MYSQL_ROOT_PASSWORD=your-super-secret-root-password-here

# Credenciais do usuário da aplicação
DB_USER=qreports
DB_PASSWORD=your-strong-app-password-here

# Configuração do banco
DB_HOST=mysql
DB_NAME=relatorios

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# BACKEND (Node.js/Express)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Porta do servidor (padrão: 3000)
PORT=3000

# Ambiente de execução
# Valores: development | production | test
NODE_ENV=development

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# FRONTEND (Vite/React)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# URL da API (para desenvolvimento local)
VITE_API_URL=http://localhost:3000/api

# Timeout de requisições (ms)
VITE_API_TIMEOUT=30000

# Configurações de paginação
VITE_DEFAULT_PAGE_SIZE=100
VITE_MAX_PAGE_SIZE=1000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AUTENTICAÇÃO
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# JWT Secret (gere com: openssl rand -base64 32)
# JWT_SECRET=your-jwt-secret-here
# JWT_EXPIRES_IN=7d

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# FEATURES FLAGS (Habilitar/Desabilitar recursos)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

VITE_ENABLE_EXPORT_PDF=true
VITE_ENABLE_SAVE_QUERIES=false
VITE_ENABLE_DARK_MODE=false

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# DOCKER (Opcional - sobrescreve valores acima)
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Caminho customizado do Chrome (se necessário)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium